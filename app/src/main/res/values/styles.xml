<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CollapsingToolbar_TextAppearance" parent="CollapsingToolbar_TextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="MainActivityTheme" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    //定义切换夜间模式的动画效果
    <style name="WindowAnimationFadeInOut">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>


    <style name="user_center_anim_style">
        <item name="android:windowEnterAnimation">@anim/dialog_show</item>
        <!-- 指定显示的动画xml -->

        <item name="android:windowExitAnimation">@anim/dialog_hidden</item>
        <!-- 指定消失的动画xml -->
    </style>



</resources>
